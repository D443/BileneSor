<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mg.bilenesor.KatilimciEkleActivity"
    android:background="@drawable/bg3">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_katilimci_ekle"
        android:hint="Katılımcı"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_katilimci_ekle"
        android:background="@drawable/kaydet"
        android:layout_alignTop="@+id/txt_katilimci_ekle"
        android:layout_toRightOf="@+id/txt_katilimci_ekle"
        android:layout_toEndOf="@+id/txt_katilimci_ekle" />
</RelativeLayout>
